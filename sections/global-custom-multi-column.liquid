        {
          "type": "text",
          "id": "fallback_icon",
          "label": "Default snippet",
          "info": "Update to change the default icon",
          "default": "house-location"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "We Love Outdoors"
        },
        {
          "type": "textarea",
          "id": "text",
