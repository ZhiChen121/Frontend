{{ 'custom-collage.css' | asset_url | stylesheet_tag }}

<div class="gallery-container">
  <div class="gallery-container-1">
    <img src="{{ section.settings.collage_image_1 | image_url }}" />
    <div class="gallery-text">
      <h1>{{ section.settings.collage_title_1 | upcase }}</h1>
      <p>{{ section.settings.collage_text_1 }}</p>
      <button>{{ section.settings.collage_button_1 }}</button>
    </div>
  </div>
  <div class="gallery-container-2">
    <img src="{{ section.settings.collage_image_2 | image_url }}" />
    <div class="gallery-text">
      <h1>{{ section.settings.collage_title_2 | upcase }}</h1>
      <p>{{ section.settings.collage_text_2 }}</p>
      <button>{{ section.settings.collage_button_2 }}</button>
    </div>
  </div>
  <div class="gallery-container-3">
    <div>
      <img src="{{ section.settings.collage_image_3 | image_url }}" />
      <div class="gallery-text">
        <h1>{{ section.settings.collage_title_3 | upcase }}</h1>
        <p>{{ section.settings.collage_text_3 }}</p>
        <button>{{ section.settings.collage_button_3 }}</button>
      </div>
    </div>
  </div>
</div>

