    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'title' %}
          <h1>{{ block.settings.heading_text }}</h1>
        {% when 'sub_subtitle' %}
          <h3>{{ block.settings.subheading_text }}</h3>
        {% when 'paragraph' %}
          <p>{{ block.settings.paragraph_text }}</p>
        {% when 'subtitle' %}
          <h2>{{ block.settings.heading_text }}</h2>
      {% endcase %}
    {% endfor %}
    
    {% if image_blocks.size > 0 %}
      <div class="custom-content-images">
        {% for block in image_blocks %}
          <div style="flex: 0 0 {{ 100 | divided_by: images_per_section }}%;">
            <img src="{{ block.settings.image | image_url }}" alt="">
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
  <nav class="custom-content-sidebar">
    <h1 class="sidebar-title">Sidebar</h1>
    <div>
      {% for link in linklists[section.settings.sidebar_links].links %}
        <a href="{{ link.url }}">{{ link.title }}</a>
      {% endfor %}
    </div>
  </nav>
