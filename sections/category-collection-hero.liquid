{% style %}
  .collection-hero-container {
    position: relative;
    text-align: center;
    color: white;
  }

  .collection-hero-container img {
    width: 100%;
    height: 300px;
    object-fit: cover;
    filter: brightness(70%);
  }

  .collection-hero-container h1 {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-weight: bold;
    color: white;
  }

{% endstyle %}

<div class="collection-hero-container">
  <img src="{{ 'hero-collection.jpg' | asset_url }}" />
  <h1>Tops & Jackets</h1>  
</div>

