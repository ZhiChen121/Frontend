{{ 'custom-content.css' | asset_url | stylesheet_tag }}

<div id="custom-content-container">
  <div class="custom-content-text">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'title' %}
          <h1>{{ block.settings.title }}</h1>
        {% when 'sub_subtitle' %}
          <h3>{{ block.settings.sub_subtitle }}</h3>
        {% when 'paragraph' %}
          <p>{{ block.settings.paragraph }}</p>
        {% when 'subtitle' %}
          <h2>{{ block.settings.subtitle }}</h2>
        {% when 'single_image' %}
          <img src="{{ block.settings.single_image | image_url }}"/>
        {% when 'collage' %}
          {% assign images_per_row = block.settings.images_per_row %}
          <div class="custom-content-images">
            {% for i in (1..3) %}
              {% assign image_id = 'image_' | append: i %}
              {% assign image = block.settings[image_id] %}
              {% if image != blank %}
                <img src="{{ image | image_url }}" alt="" />
              {% endif %}
            {% endfor %}
          </div>
        {% endcase %}
    {% endfor %}
  </div>
  <nav class="custom-content-sidebar">
    <h1 class="sidebar-title">Sidebar</h1>
    <div>
      {% for link in linklists[section.settings.sidebar_links].links %}
        <a href="{{ link.url }}">{{ link.title }}</a>
      {% endfor %}
    </div>
  </nav>
</div>

{% schema %}
  {
    "name": "Custom Content",
    "settings": [
      {
        "type": "link_list",
        "id": "sidebar_links",
        "label": "Sidebar Links",
        "info": "Add links to the sidebar section",
      },
      {
        "type": "range",
        "id": "images_per_section",
        "min": 1,
        "max": 3,
        "step": 1,
        "label": "Images per section",
        "default": 1
      },
    ],
    "presets": [
      {
        "name": "Custom Content",
        "settings": {
        }
      }
    ],
    "blocks": [
      {
        "type": "title",
        "name": "Title",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "This is a sample title"
          }
        ]
      },
      {
        "type": "subtitle",
        "name": "Subtitle",
        "settings": [
          {
            "type": "text",
            "id": "subtitle",
            "label": "Subtitle",
            "default": "This is a sample subtitle"
          }
        ]
      },
      {
        "type": "sub_subtitle",
        "name": "Sub subtitle",
        "settings": [
          {
            "type": "text",
            "id": "sub_subtitle",
            "label": "Sub subtitle",
            "default": "This is a sample sub subtitle"
          }
        ]
      },
      {
        "type": "paragraph",
        "name": "Paragraph",
        "settings": [
          {
            "type": "textarea",
            "id": "paragraph",
            "label": "Paragraph text",
            "default": "This is a sample paragraph"
          }
        ]
      },
      {
        "type": "single_image",
        "name": "Single Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "single_image",
            "label": "Upload an image",
            "info": "This image will take up the entirety of the section. Use the collage block if you want multiple images."
          }
        ]
      },
      {
        "type": "collage",
        "name": "Collage",
        "settings": [
          {
            "type": "image_picker",
            "id": "image_1",
            "label": "Image 1"
          },
          {
            "type": "image_picker",
            "id": "image_2",
            "label": "Image 2"
          },
          {
            "type": "image_picker",
            "id": "image_3",
            "label": "Image 3"
          },
          {
            "type": "range",
            "id": "images_per_row",
            "label": "Images per row",
            "min": 1,
            "max": 3,
            "step": 1,
            "default": 2
          }
        ]
      }
    ]
  }
{% endschema %}