{{ 'global-rich-text.css' | asset_url | stylesheet_tag }}

<div class="article-rich-text">
  <div class="article-container">
    <div class="rich-text-container">
      <img src="{{ section.settings.rich_text_image_1 | image_url }}" alt="Returns icon"/>
      <p class="rich-text-title">{{ section.settings.rich_title_1 }}</p>
    </div>
    <div class="rich-text-container">
      <img src="{{ section.settings.rich_text_image_2 | image_url }}" alt="Free delivery icon"/>
      <p class="rich-text-title">{{ section.settings.rich_title_2 }}</p>
    </div>
    <div class="rich-text-container">
      <img src="{{ section.settings.rich_text_image_3 | image_url }}" alt="Business icon"/>
      <p class="rich-text-title">{{ section.settings.rich_title_3 }}</p>
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Rich text",
    "class": "section-rich-text",
    "settings": [
      {
        "type": "text",
        "id": "rich_title_1",
        "label": "Rich Title 1",
        "default": "28 Day Returns",
        "info": "This text will appear in the left section"
      },
      {
        "type": "image_picker",
        "id": "rich_text_image_1",
        "label": "Icon 1",
        "info": "This icon will appear in the left section"
      },
      {
        "type": "text",
        "id": "rich_title_2",
        "label": "Rich Title 2",
        "default": "Free Delivery On Orders Over â‚¬40",
        "info": "This text will appear in the middle section"
      },
      {
        "type": "image_picker",
        "id": "rich_text_image_2",
        "label": "Icon 2",
        "info": "This icon will appear in the left section"
      },
      {
        "type": "text",
        "id": "rich_title_3",
        "label": "Rich Title 3",
        "default": "In Business Since 1977",
        "info": "This text will appear in the right section"
      },
      {
        "type": "image_picker",
        "id": "rich_text_image_3",
        "label": "Icon 3",
        "info": "This icon will appear in the left section"
      },
    ],
    "presets": [
      {
        "name": "Global Rich Text",
        "settings": {
          
        }
      }
    ]
  }
{% endschema %}
