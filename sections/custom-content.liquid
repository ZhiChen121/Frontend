{% schema %}
  {
    "name": "Custom Content",
    "settings": [
      {
        "type": "link_list",
        "id": "sidebar_links",
        "label": "Sidebar Links",
        "info": "Add links to the sidebar section",
      },
      {
        "type": "range",
        "id": "images_per_section",
        "min": 1,
        "max": 3,
        "step": 1,
        "label": "Images per section",
        "default": 1
      },
    ],
    "presets": [
      {
        "name": "Custom Content",
        "settings": {
        }
      }
    ],
    "blocks": [
      {
        "type": "title",
        "name": "Title",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "This is a sample title"
          }
        ]
      },
      {
        "type": "subtitle",
        "name": "Subtitle",
        "settings": [
          {
            "type": "text",
            "id": "subtitle",
            "label": "Subtitle",
            "default": "This is a sample subtitle"
          }
        ]
      },
      {
        "type": "sub_subtitle",
        "name": "Sub subtitle",
        "settings": [
          {
            "type": "text",
            "id": "sub_subtitle",
            "label": "Sub subtitle",
            "default": "This is a sample sub subtitle"
          }
        ]
      },
      {
        "type": "paragraph",
        "name": "Paragraph",
        "settings": [
          {
            "type": "textarea",
            "id": "paragraph",
            "label": "Paragraph text",
            "default": "This is a sample paragraph"
          }
        ]
      },
    ]
  }
{% endschema %}